    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug local file",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${relativeFile}"
            ],
            "env": {
                "AWS_REGION": "ap-southeast-1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug local file with aws-vault",
            "runtimeExecutable": "aws-vault",
            "runtimeArgs": [
                "exec",
                "personal",
                "--",
                "node",
                "-r",
                "ts-node/register",
                "${relativeFile}"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}